{{#modal-dialog close="back"
                targetAttachment="center"
                translucentOverlay=true}}
  <div class="modal-body">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Release</th>
          <th>Seeders</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each magnets as |magnet|}}
          <tr>
            <td>{{magnet.title}}</td>
            <td>{{magnet.seeders}}</td>
            <td>
              <a {{action "play" magnet}} href="#" class="more">
                <i class="fa fa-play-circle-o fa-fw"></i>
              </a>
              <a {{action "download" magnet}} href="#" class="more">
                <i class="fa fa-download fa-fw"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/modal-dialog}}