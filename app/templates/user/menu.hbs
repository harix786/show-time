<li class="dropdown messages-menu">
  <a href="#" {{action "updateAll"}}>
    {{#if isUpdating}}
      <i class="fa fa-spinner spin"></i>
    {{else}}
      <i class="fa fa-refresh"></i>
    {{/if}}
  </a>
</li>
<li class="dropdown notifications-menu">
  <a href="#" {{action "reloadAll"}}>
    {{#if isReloading}}
      <i class="fa fa-spinner spin"></i>
    {{else}}
      <i class="fa fa-magnet"></i>
    {{/if}}
  </a>
</li>